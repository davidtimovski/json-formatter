<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:JsonFormatter.ViewModels.UserControls"
             xmlns:local="using:JsonFormatter.UserControls"
             x:Class="JsonFormatter.UserControls.JsonPresenter">

    <UserControl.Styles>
        <Style Selector="Border.presenter">
            <Setter Property="Background" Value="#262626" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="CornerRadius" Value="8" />
        </Style>
        
        <Style Selector="ScrollViewer.jsonWrap">
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
    </UserControl.Styles>

    <Design.DataContext>
        <vm:JsonPresenterViewModel />
    </Design.DataContext>

    <Border Classes="presenter">
        <ScrollViewer IsVisible="{Binding !Empty}" Classes="jsonWrap">
            <local:ValueNode DataContext="{Binding Json}" />
        </ScrollViewer>
    </Border>

</UserControl>