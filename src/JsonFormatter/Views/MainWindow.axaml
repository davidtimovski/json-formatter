<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:JsonFormatter.ViewModels"
        xmlns:local="using:JsonFormatter.UserControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="JsonFormatter.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Json Formatter">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="Background" Value="#222" />
        </Style>
        
        <Style Selector="TextBlock.property">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}" />
        </Style>
        <Style Selector="TextBlock.bracket">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}" />
        </Style>
        
        <Style Selector="TextBox.input">
            <Setter Property="MaxHeight" Value="Infinity" />
            <Setter Property="AcceptsReturn" Value="True" />
        </Style>
        
        <Style Selector="Button.expandCollapseButton">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        
        <Style Selector="Border.row">
            <Setter Property="Height" Value="24" />
        </Style>
        
        <Style Selector="Border.formatButtonWrap">
            <Setter Property="Padding" Value="0 30" />
        </Style>
        <Style Selector="Border.formatButtonWrap Button">
            <Setter Property="Padding" Value="20 10" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="60 100 *">
        <TextBox Name="Input" Grid.Row="0" Text="{Binding Input}" PastingFromClipboard="Input_OnPastingFromClipboard" Classes="input" />
        
        <Border Grid.Row="1" Classes="formatButtonWrap">
            <Button Name="FormatButton" IsEnabled="{Binding !FormatButtonDisabled}">Format</Button>
        </Border>
        
        <local:JsonPresenter Grid.Row="2" DataContext="{Binding Presenter}" />
    </Grid>

</Window>
